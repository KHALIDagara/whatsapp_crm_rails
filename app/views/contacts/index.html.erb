<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-semibold text-gray-800">Contacts</h1>
  <%# We will add a "New Contact" button here in a future step %>
</div>

<div class="bg-white p-6 rounded-lg shadow-md">
  <div class="overflow-x-auto">
    <table class="w-full text-sm text-left text-gray-500">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3">Name</th>
          <th scope="col" class="px-6 py-3">WhatsApp Number</th>
          <th scope="col" class="px-6 py-3">Country</th>
          <th scope="col" class="px-6 py-3">Status</th>
          <th scope="col" class="px-6 py-3">Tags</th>
          <th scope="col" class="px-6 py-3">Notes</th>
        </tr>
      </thead>
      <tbody>
        <% @contacts.each do |contact| %>
          <tr class="bg-white border-b hover:bg-gray-50">
            <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
              <%= contact.name %>
            </td>
            <td class="px-6 py-4">
              <%= contact.whatsapp_number %>
            </td>
            <td class="px-6 py-4">
              <%= contact.country %>
            </td>
            <td class="px-6 py-4">
              <span class="px-2 py-1 text-xs font-medium rounded-full
                <%== { pending: 'bg-yellow-100 text-yellow-800', 
                       phase_1: 'bg-blue-100 text-blue-800', 
                       phase_2: 'bg-indigo-100 text-indigo-800', 
                       phase_3: 'bg-purple-100 text-purple-800'
                     }.fetch(contact.status.to_sym, 'bg-gray-100 text-gray-800') %>">
                <%= contact.status.humanize.titleize %>
              </span>
            </td>
            <td class="px-6 py-4">
              <div class="flex flex-wrap gap-1">
                <% contact.tags.each do |tag| %>
                  <span class="px-2 py-1 text-xs font-medium text-green-800 bg-green-100 rounded-full">
                    <%= tag.name %>
                  </span>
                <% end %>
              </div>
            </td>
            <td class="px-6 py-4 text-gray-600 max-w-xs truncate">
              <%= contact.notes %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
